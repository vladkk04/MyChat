        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="AuthorizationCustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
