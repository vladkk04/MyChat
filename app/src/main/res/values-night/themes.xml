<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MyChat" parent="Theme.Material3.DayNight.NoActionBar">
        <!--- Primary Colors -->
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorPrimaryContainer">@color/color_primary_container_night</item>
        <item name="colorOnPrimary">@color/color_on_primary_night</item>
        <item name="colorOnPrimaryContainer">@color/color_on_primary_container_night</item>
        <!--- Secondary Colors -->
        <item name="colorSecondaryContainer">@color/color_secondary_container_night</item>
        <item name="colorOnSecondaryContainer">@color/color_on_secondary_container_night</item>
        <!--- Surface Colors -->
        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="colorSurfaceContainerHigh">@color/color_surface_container_high_night</item>
        <item name="colorSurfaceContainer">@color/color_primary_night</item>
        <item name="colorSurface">@color/color_surface_night</item>
        <item name="colorOnSurface">@color/color_on_surface_variant_night</item>
        <item name="colorSurfaceContainerLow">@color/color_avatar_stroke_night</item>
        <!--- Error Colors -->
        <item name="colorError">@color/color_error_night</item>
        <!-- Background Color -->
        <item name="android:colorBackground">@color/color_background_night</item>
        <!-- Status Bar Color -->
        <item name="android:statusBarColor">@color/color_status_bar_night</item>
        <!--- Text Colors -->
        <item name="android:textColor">@color/color_text_night</item>
        <!-- Text Settings -->
        <item name="android:fontFamily">@font/hind_siliguri</item>
        <!-- Input Field Colors -->
        <item name="colorOutline">@color/color_outline_night</item>
        <!-- Bottom Navigation Bar -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <item name="materialAlertDialogTheme">@style/AlertDialogTheme</item>

        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>

    </style>

    <style name="Theme.MyChat" parent="Base.Theme.MyChat" />

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/color_background_tint_bottom_sheet_night</item>
    </style>


    <style name="CustomShapeAppearanceOverlay.Material3.Corner.Top" parent="ShapeAppearanceOverlay.Material3.Corner.Top">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">35dp</item>
        <item name="cornerSizeTopLeft">35dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MyAlertDialogStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/MyBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/MyBarButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/MyBarButtonStyle</item>
    </style>

    <style name="MyAlertDialogStyle" parent="MaterialAlertDialog.Material3">
        <item name="buttonIconDimen">32dp</item>
    </style>

    <style name="MyBarButtonStyle" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="checkBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CheckBox</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="colorPrimary">@color/color_primary_container_night</item>
        <item name="colorOnSurfaceVariant">@color/color_primary_container_night</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@color/non_clickable_color_text_night</item>
        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="colorSurfaceContainer">@color/color_surface_container_night</item>
    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">44dp</item>
        <item name="android:paddingRight">44dp</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.Suggestion.IconOnly" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ShapeAppearance.ImageView.Rounded" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.ImageView.Suggestion.Rounded" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="cornerSize">20%</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurfaceVariant">@color/color_primary_container_night</item>
        <item name="colorPrimary">@color/color_on_primary_night</item>
    </style>
    
    <style name="CustomInitialTabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultCustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorOnPrimaryContainer">@color/color_on_surface_variant_night</item>
        <item name="boxStrokeColor">@drawable/custom_box_stroke_text_color</item>
        <item name="hintTextColor">@color/color_on_surface_variant_night</item>
        <item name="android:background">@null</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.TextInputEditText.Cursor.Color</item>
    </style>

    <style name="Widget.TextInputLayout.BottomSentBar" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorPrimary">@color/color_primary_container_night</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="ThemeOverlay.Material3.TextInputEditText.Cursor.Color" parent="">
        <item name="colorControlActivated">@color/color_on_surface_variant_night</item>
    </style>

</resources>