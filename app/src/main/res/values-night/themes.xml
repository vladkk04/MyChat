<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.WebViewProgram" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorOnPrimary">@color/color_on_primary_night</item>
        <item name="colorPrimaryContainer">@color/color_primary_container_night</item>
        <item name="colorOnPrimaryContainer">@color/color_on_primary_container_night</item>

        <item name="colorSecondaryContainer">@color/color_on_primary_container_night</item>
        <item name="colorOnSecondaryContainer">@color/color_primary_container_night</item>


       <!-- <item name="android:fontFamily">@font/hind_siliguri</item>-->
        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="colorSurfaceContainerHigh">@color/color_on_surface_container_high_night</item>
        <item name="colorSurface">@color/color_surface_night</item>
        <item name="colorOnSurface">@color/color_on_surface_variant_night</item>

        <item name="colorOutline">@color/color_outline_night</item>

        <item name="android:colorBackground">@color/background_night</item>
        <item name="android:statusBarColor">@color/background_night</item>

        <item name="colorError">@color/color_error_night</item>

        <item name="android:fontFamily">@font/hind_siliguri</item>

        <item name="android:textColor">@color/color_on_surface_variant_night</item>

    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">44dp</item>
        <item name="android:paddingRight">44dp</item>
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ShapeAppearance.ImageView.Rounded" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="CustomRadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurfaceVariant">@color/color_primary_container_night</item>
        <item name="colorPrimary">@color/color_on_primary_night</item>
    </style>
    
    <style name="CustomInitialTabLayout" parent="Widget.Material3.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/color_primary_night</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="colorSurfaceVariant">@color/azure</item>
        <item name="colorOnSurfaceVariant">@color/color_on_surface_variant_night</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DefaultCustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="colorOnPrimaryContainer">@color/color_on_surface_variant_night</item>
        <item name="boxStrokeColor">@drawable/custom_box_stroke_text_color</item>
        <item name="hintTextColor">@color/color_on_surface_variant_night</item>
        <item name="android:background">@null</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.TextInputEditText.Cursor.Color</item>
    </style>


    <style name="ThemeOverlay.Material3.TextInputEditText.Cursor.Color" parent="">
        <item name="colorControlActivated">@color/color_on_surface_variant_night</item>
    </style>

</resources>