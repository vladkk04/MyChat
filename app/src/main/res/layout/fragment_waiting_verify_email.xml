<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingVertical="80dp"
    tools:context=".ui.fragments.waitingVerify.WaitingVerifyEmail">

    <ImageView
        android:id="@+id/smile"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/happy_emoji"
        android:contentDescription="smile" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/smile"
        android:layout_centerHorizontal="true"
        android:text="@string/waiting_verify_email_text"
        android:textAlignment="center"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_resend_confirmation_email"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:fontFamily="@font/hind_siliguri"
        android:text="@string/resend_confirmation_text"
        app:cornerRadius="15dp" />

</RelativeLayout>