<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".ui.screens.waitingVerify.WaitingVerifyEmail">

    <ImageView
        android:id="@+id/smile"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="top|center"
        android:src="@drawable/happy_emoji"
        android:layout_weight="0.4"
        android:contentDescription="smile" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:text="@string/waiting_verify_email_text"
        android:textAlignment="center"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_resend_confirmation_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:fontFamily="@font/hind_siliguri"
        android:text="@string/resend_confirmation_text"
        app:cornerRadius="15dp" />

</LinearLayout>