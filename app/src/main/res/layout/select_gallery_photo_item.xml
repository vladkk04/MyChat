<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp">

    <TextView
        android:id="@+id/text_view_selectable_photo_counter"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_gravity="end"
        android:layout_margin="6dp"
        android:visibility="invisible"
        android:gravity="center"
        android:background="@drawable/custom_rounded_corner"
        android:text="1"
        android:textSize="12sp"
        android:textColor="@color/color_on_primary_night"
        android:elevation="1dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_select_photo_from_gallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:background="@color/color_primary_night"
        app:shapeAppearance="@style/ShapeAppearance.ImageView.Suggestion.Rounded"/>

</FrameLayout>