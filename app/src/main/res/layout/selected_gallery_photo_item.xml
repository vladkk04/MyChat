<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp">

    <CheckBox
        style="@style/checkBox"
        android:id="@+id/checkbox_delete_selected_photo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:gravity="center"
        android:elevation="1dp"
        android:layout_margin="6dp"
        android:visibility="visible"
        android:button="@drawable/ic_delete" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_view_selected_photo_from_gallery"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="-1dp"
        android:scaleType="centerCrop"
        android:background="@color/color_primary_night"
        app:shapeAppearance="@style/ShapeAppearance.ImageView.Suggestion.Rounded"/>

</FrameLayout>